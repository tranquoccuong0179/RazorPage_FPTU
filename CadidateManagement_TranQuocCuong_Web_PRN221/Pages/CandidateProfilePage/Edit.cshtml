@page
@model CadidateManagement_TranQuocCuong_Web_PRN221.Pages.CandidateProfilePage.EditModel

@{
    ViewData["Title"] = "Edit Candidate Profile";
    String RoleID = HttpContext.Session.GetString("RoleID");
    if (!RoleID.Equals("1"))
    {
        Response.Redirect("/NotPermission");
    }
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3>Edit Candidate Profile</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="CandidateProfile.CandidateId" />

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.Fullname" class="form-label"></label>
                    <input asp-for="CandidateProfile.Fullname" class="form-control" placeholder="Enter Full Name" />
                    <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.Birthday" class="form-label"></label>
                    <input asp-for="CandidateProfile.Birthday" class="form-control" type="date" />
                    <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.ProfileShortDescription" class="form-label"></label>
                    <textarea asp-for="CandidateProfile.ProfileShortDescription" class="form-control" rows="3" placeholder="Briefly describe the profile"></textarea>
                    <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.ProfileUrl" class="form-label"></label>
                    <input asp-for="CandidateProfile.ProfileUrl" class="form-control" placeholder="Enter Profile URL" />
                    <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.PostingId" class="form-label"></label>
                    <select asp-for="CandidateProfile.PostingId" class="form-control" asp-items="ViewBag.PostingId">
                        <option value="">Select Posting</option>
                    </select>
                    <span asp-validation-for="CandidateProfile.PostingId" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
