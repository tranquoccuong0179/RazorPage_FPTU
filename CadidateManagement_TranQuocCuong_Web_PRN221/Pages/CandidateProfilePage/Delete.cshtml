@page
@model CadidateManagement_TranQuocCuong_Web_PRN221.Pages.CandidateProfilePage.DeleteModel

@{
    ViewData["Title"] = "Delete Candidate Profile";
    String RoleID = HttpContext.Session.GetString("RoleID");
    if (!RoleID.Equals("1"))
    {
        Response.Redirect("/NotPermission");
    }
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3>Delete Candidate Profile</h3>
        </div>
        <div class="card-body">
            <h4>Are you sure you want to delete this?</h4>
            <h4 class="card-title">Candidate Profile</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CandidateProfile.Fullname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.Fullname)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CandidateProfile.Birthday)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.Birthday)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CandidateProfile.ProfileShortDescription)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.ProfileShortDescription)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CandidateProfile.ProfileUrl)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.ProfileUrl)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CandidateProfile.Posting)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.Posting.JobPostingTitle)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form method="post">
                <input type="hidden" asp-for="CandidateProfile.CandidateId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
